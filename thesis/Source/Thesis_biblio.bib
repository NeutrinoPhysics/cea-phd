journal = {Constraints},
keywords = {Cosmology and Extragalactic Astrophysics,High Energy Physics - Phenomenology},
month = jan,
pages = {15},
title = {{New constraints on cosmological parameters and neutrino properties using the expansion rate of the Universe to z$\sim$1.75}},
