author = {Okumura, Teppei and Seljak, Uros and McDonald, Patrick and Desjacques, Vincent},
eprint = {1109.1609},
file = {:Users/arnaud/Documents/Biblio/Okumura et al/2011/Okumura et al. - 2011 - Distribution function approach to redshift space distortions N-body simulations.pdf:pdf},
keywords = {Cosmology and Extragalactic Astrophysics},
