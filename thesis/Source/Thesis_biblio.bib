author = {Rossi, Graziano and Palanque-Delabrouille, Nathalie and Yeche, Christophe and Borde, Arnaud and LeGoff, Jean-Marc and Viel, Matteo and Lesgourgues, Julien Lesgourgues},
booktitle = {AAS 221st meeting},
title = {{Neutrino masses, cosmological parameters and dark energy from the transmitted flux in the Lyman-alpha forest}},
year = {2013}
}
